{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "flutter",
      "command": "flutter",
      "args": [
        "pub",
        "run",
        "build_runner",
        "watch",
        "--delete-conflicting-outputs"
      ],
      "problemMatcher": ["$dart-build_runner"],
      "group": "build",
      "label": "🟢 Build Runner Watch"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["pub", "run", "build_runner", "build"],
      "problemMatcher": ["$dart-build_runner"],
      "group": "build",
      "label": "🟣 Build Runner Build"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["pub", "run", "build_runner", "serve"],
      "problemMatcher": ["$dart-build_runner"],
      "group": "build",
      "label": "🟡 Build Runner Serve"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": [
        "build",
        "apk",
        "-t",
        "lib/bootstrap/flavors/production.dart",
        "--no-tree-shake-icons"
      ],
      "group": "build",
      "problemMatcher": ["$dart-build_runner"],
      "label": "🤖 Build APK Production"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": [
        "build",
        "apk",
        "-t",
        "lib/bootstrap/flavors/staging.dart",
        "--no-tree-shake-icons"
      ],
      "group": "build",
      "problemMatcher": ["$dart-build_runner"],
      "label": "🤖 Build APK Staging"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": [
        "build",
        "appbundle",
        "-t",
        "lib/bootstrap/flavors/staging.dart",
        "--no-tree-shake-icons"
      ],
      "group": "build",
      "problemMatcher": ["$dart-build_runner"],
      "label": "🤖 Build Appbundle Staging"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": [
        "build",
        "appbundle",
        "-t",
        "lib/bootstrap/flavors/production.dart",
        "--no-tree-shake-icons"
      ],
      "group": "build",
      "problemMatcher": ["$dart-build_runner"],
      "label": "🤖 Build Appbundle Production"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": [
        "build",
        "ios",
        "-t",
        "lib/bootstrap/flavors/production.dart",
        "--no-tree-shake-icons"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$dart-build_runner"],
      "label": "🍎 Build IOS Productiond"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": [
        "build",
        "ios",
        "-t",
        "lib/bootstrap/flavors/staging.dart",
        "--no-tree-shake-icons"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$dart-build_runner"],
      "label": "🍎 Build IOS Staging"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": [
        "build",
        "ipa",
        "-t",
        "lib/bootstrap/flavors/staging.dart",
        "--no-tree-shake-icons"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$dart-build_runner"],
      "label": "🍎 Build IPA Staging (Archive)"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": [
        "build",
        "ipa",
        "-t",
        "lib/bootstrap/flavors/production.dart",
        "--no-tree-shake-icons"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$dart-build_runner"],
      "label": "🍎 Build IPA Productiond (Archive)"
    },
    {
      "label": "Run Fastlane",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "fastlane", "test"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
 
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      
      "options": {
        "env": {
          "SDK": "${config:dart.flutterSdkPath}",
        }
      }
    }, 
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["install"],
      "problemMatcher": ["$dart-build_runner"],
      "label": "📱 Install"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["pub", "get"],
      "problemMatcher": ["$dart-build_runner"],
      "label": "📦 Get"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["pub", "upgrade"],
      "problemMatcher": ["$dart-build_runner"],
      "label": "📦 Upgrade"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["pub", "run", "flutter_launcher_icons"],
      "problemMatcher": ["$dart-build_runner"],
      "label": "⭐ Launcher Icons"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["pub", "run", "cache", "clean"],
      "problemMatcher": ["$dart-build_runner"],
      "label": "📦 Clean Cache"
    },
    {
      "type": "flutter",
      "command": "flutter",
      "args": ["clean"],
      "problemMatcher": ["$dart-build_runner"],
      "label": "📦 Clean"
    },
    {
      "label": "🟧 ADB Connect",
      "type": "shell",
      "command": "adb connect ${input:device}",
      "problemMatcher": []
    },
    {
      "label": "🟦 ADB Disconnect",
      "type": "shell",
      "command": "adb disconnect",
      "problemMatcher": []
    },
    {
      "label": "🟫 ADB Devices",
      "type": "shell",
      "command": "adb devices",
      "problemMatcher": []
    },
    {
      "label": "🟪 ADB Restart",
      "type": "shell",
      "command": "adb kill-server && adb start-server",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "device",
      "description": "Device:",
      "default": "<IP>:<PORT>",
      "type": "promptString"
    }
  ]
}
